<Window x:Class="QLBH.AddProductsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLBH"
        xmlns:viewModel="clr-namespace:QLBH.ViewModels"
        mc:Ignorable="d"
        Background="Transparent"
        Title="Thêm sản phẩm" Icon="D:\C# Assignment\DoAn\QLBH\QLBH\Images\image_logo.png" Height="500" Width="650">
   
    <Window.DataContext>
        <viewModel:AddProductsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            
            <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Tên sản phẩm
                </TextBlock>
                <TextBox Height="20" Width="200" Text="{Binding name, Mode=TwoWay}">

                </TextBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Margin="210,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Giá
                </TextBlock>
                <TextBox Height="20" Width="200" Text="{Binding price, Mode=TwoWay}">

                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Số lượng 
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="210,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Đơn vị
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Margin="415,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Ghi chú
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Ngày nhập hàng
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="210,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Hạn sử dụng
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Margin="415,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    Nhà sản xuất
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0">
                <TextBlock Style="{StaticResource textAddProduct}">
                    File ảnh
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4">
            <Button HorizontalAlignment="Center" Width="200" Height="50" Foreground="White" FontSize="30" FontWeight="Bold" Style="{StaticResource functionButton}" Content="Thêm" Command="{Binding Add}"></Button>
        </Grid>
        
    </Grid>
</Window>
