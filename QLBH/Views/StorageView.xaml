<UserControl x:Class="QLBH.StorageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLBH"
             xmlns:viewModel="clr-namespace:QLBH.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:StorageViewModel/>
    </UserControl.DataContext>

    <Grid Background="Transparent"
          Opacity="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--Find Bar-->
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0">
                <TextBlock Height="20" Width="200" Foreground="White"
                           FontWeight="Medium">
                    Id sản phẩm
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Margin="210,0,0,0">
                <TextBlock Height="20" Width="200" Foreground="White"
                           FontWeight="Medium">
                    Tên sản phẩm
                </TextBlock>
                <TextBox Height="20" Width="200">

                </TextBox>
            </StackPanel>

        </Grid>
        <!--Insert Button-->
        <Grid Grid.Row="1">
            <Button Width="100"
                    HorizontalAlignment="Left"
                    Margin="675,0,0,0" Height="30" VerticalAlignment="Top" Click="Button_Click">
                <TextBlock Text="Thêm Sản Phẩm"/>

            </Button>

            <Button Width="100"
                    HorizontalAlignment="Right"
                    Margin="0,0,150,0">
                <TextBlock Text="Tìm kiếm"/>

            </Button>

        </Grid>
        <!--List Item-->
        <Grid Grid.Row="2">
            <!--Danh sách sản phẩm-->
            <ListView Name="listProduct"
                  Margin="2,80,2,0"
                  Background="Transparent"
                  BorderBrush="Transparent">
                <!--Thiết lập cấu trúc sắp xếp các phần tử ListView-->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" Rows="2">
                        </UniformGrid>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!--Template hiển thị một sản phẩm-->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Border>
                                <Border.Effect>
                                    <DropShadowEffect
                                    Color="Black"
                                    Direction="270"
                                    ShadowDepth="1"
                                    BlurRadius="10"/>
                                </Border.Effect>
                                <Image Source="D:\C# Assignment\DoAn\QLBH\QLBH\Images\pd1.jpg"
                                   Stretch="UniformToFill"
                                   Width="120" Height="120"
                                   HorizontalAlignment="Center">
                                    <Image.Clip>
                                        <EllipseGeometry
                                        RadiusX="60"
                                        RadiusY="60"
                                        Center="60,60"/>
                                    </Image.Clip>
                                </Image>
                            </Border>
                            <TextBlock Text="Hoa Hồng"
                                   MaxWidth="120"
                                   TextAlignment="Center"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   FontSize="13" Margin="0,5,0,0"
                                   HorizontalAlignment="Center"
                                   FontFamily="Sitka Subheading"
                                   FontWeight="Bold"/>
                            <TextBlock Text="100"
                                   FontFamily="Sitka Subheading"
                                   HorizontalAlignment="Center"
                                   Background="Red"
                                   Foreground="White"
                                   FontSize="10"
                                   Padding="1">
                                   <Bold><Underline>đ</Underline></Bold>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

    </Grid>

</UserControl>
